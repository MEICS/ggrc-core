<ul class="new-tree">
  {{#list}}
    <li data-model="true" {{data 'person'}} class="tree-item {{object_type}}">
      <div class="item-main">
        <div class="simple-link">
          <div class="row-fluid">
            <div class="span12">
              <div class="item-data">
                <div class="tree-title-area">
                  {{person.email}}
                    {{#roles}}
                      <span class="role">
                        {{permission_summary}}
                      </span>
                    {{/roles}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </li>
  {{/list}}
</ul>
