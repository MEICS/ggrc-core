{{#pack instance instance=instance}}
{{#is_private}}
  <div class="row-fluid">
    <div class="span12">
      <div class="tree-info">
        <strong>gDrive Evidence Folder: </strong>
        {{#with_mapping 'folders' instance}}
          {{#if folders.length}}
          <a href="{{folders.0.instance.alternateLink}}" target="_blank">
            /{{folders.0.instance.title}}
          </a>
          {{else}}
            No evidence folder for this {{class.title_singular}}.
            <a href="javascript://" class="create-folder" {{#instance}}{{data 'model'}}{{/instance}}>Create one now</a>
          {{/if}}
        {{/with_mapping}}
      </div>
    </div>
  </div>
{{/is_private}}
{{/pack}}
