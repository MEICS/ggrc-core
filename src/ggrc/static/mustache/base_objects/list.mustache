{{#list}}
<li class="tree-item {{instance.class.model_singular.toLowerCase}}" data-object-id="{{instance.id}}" data-object-type="{{instance.class.table_singular}}">
  <div class="item-main" data-model="true" {{data 'model'}}>
    
    <a href="javascript://" class="openclose">
      <div class="row-fluid">
        <div class="span10">
          <div class="item-data">
            <div class="tree-title-area">
              <i class="grcicon-{{instance.class.model_singular.toLowerCase}}-color"></i>
              {{instance.display_name}}
            </div>
          </div>
        </div>
        <div class="span1">
          <div class="counter">
            {{^instance.owner}}
              <i class="grcicon-people-warning"></i>
            {{/instance.owner}}
          </div>
        </div>
        <div class="span1">
          <div class="counter">
          </div>
        </div>
      </div>
    </a>
  </div>

  <div class="tier-2-info item-content">
    <div class="tier-2-info-content">
      <div class="row-fluid">
        <div class="span12">
          <div class="tree-description short">
            {{{firstnonempty instance.description '<p><i>No description</i></p>'}}}
          </div>
          {{{show_long}}}
        </div>
      </div>
      <div class="row-fluid">
        <div class="span6">
          <div class="tree-info">
            <strong>Owner:</strong>
            {{^instance.owner}}
              <span class="error">
                Not Assigned
              </span>
            {{/instance.owner}}
            {{#if instance.owner}}
              {{instance.owner.name}}
            {{/if}}
          </div>
        </div>
        <div class="span6">
          <a  title="Edit this object">
          <a class="info-action pull-right" data-object-plural="{{instance.class.table_plural}}" data-object-singular="{{instance.class.model_singular}}" data-object-id="{{instance.id}}" data-modal-class="modal-wide" data-placement="left" data-toggle="modal-ajax-form" href="javascript://" rel="tooltip" title="Edit {{instance.class.model_singular}}">
            <i class="grcicon-edit"></i>
            Edit
          </a>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span8">
          <div class="tree-info">
            <strong>URL:</strong>
            {{^if_null instance.url}}
              <a class="url" href="{{instance.url}}">
                {{instance.url}}
              </a>
            {{/if_null}}
            {{#if_null instance.url}}
              <i>No URL</i>
            {{/if_null}}
          </div>
        </div>
        <div class="span4">
          {{^single_object}}
            <a href="{{instance.viewLink}}" class="info-action pull-right">
              <i class="grcicon-goto"></i>
              View {{instance.class.model_singular}}
            </a>
          {{/single_object}}
        </div>
      </div>
    </div>


    
    {{#if null}}{{!draw_children}}
      {{#prune_context}} {{! this line is just chopping the context stack down to one element}}
        <div class="inner-tree">
          {{#child_options}}
            <h6>{{firstnonempty list_title instance.class.title_plural}}</h6>
            <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data("options")) }}></ul>
          {{/child_options}}
        </div>
      {{/prune_context}}
    {{/if}}

  </div>
</li>
{{/list}}
<li class="tree-item tree-item-add">
  <a
    href="javascript://"
    rel="tooltip"
    data-placement="left"
    data-toggle="multitype-modal-selector"
    data-modal-class="modal-wide"
    data-original-title="Map more objects to this object"
    data-join-object-id="{{parent_instance.id}}"
    data-join-object-type="{{parent_instance.class.shortName}}">
    + Object
  </a>
</li>
