{{#each options}}
  <li class="tree-item control" {{#instance}}{{ data 'option' }}{{/instance}} data-id="{{ instance.id }}">
    <div class="item-main">
      <div class="simple-link">
        <div class="row-fluid">
          <div class="span11">
            <div class="item-data">
              <div class="tree-title-area">
                {{#if instance.name}}{{instance.name}}{{/if}}
                <span class="url-link">
                  {{#if instance.email}}{{instance.email}}{{/if}}
                </span>
                {{#if mappings.length}}
                {{#result_direct_mappings bindings_compute selected_object}}
                  <span class="pull-right">Mapped ({{mappings_type}})</span>
                {{/result_direct_mappings}}
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </li>
{{/each}}
