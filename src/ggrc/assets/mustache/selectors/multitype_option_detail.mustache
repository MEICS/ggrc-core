<div class="selector-info" style="margin-left:-10%;">
  <h4>
    <i class="grcicon-{{constructor.table_singular}}-color"></i>
    {{ title }} {{constructor.title_singular}}
  </h4>
  {{#if description}}
    <div class="rtf">
      {{{description}}}
    </div>
  {{/if}}
  <div class="owner">
    {{#if link}}
    {{else}}
      <strong>Contact:</strong>
      {{#if contact}}
      {{#using contact=contact}}
      {{contact.name}}
      {{/using}}
      {{/if}}
    {{/link}}
  </div>
  <div class="object-url">
    <strong>URL:</strong>
    {{#if url}}
    <a href="{{schemed_url url}}" target="_blank">{{url}}</a>
    {{/if}}
    {{#if link}}
    <a href="{{link}}" target="_blank">{{link}}</a>
    {{/link}}
  </div>
</div>
