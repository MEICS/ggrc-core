{{!div class="modal-body"}}

{{#instance}}
<form action="javascript://">
  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Enter Title"></i>
      </label>
      <input id="section-title" class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}">
    </div>
    <div class="span6">
      &nbsp;
      <input id="directive.id" name="directive" type="hidden" model="Directive" value="{{instance.directive.id}}">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <label>
        Text of {{#if_equals instance.directive.type 'Contract'}}Clause{{else}}Section{{/if_equals}}
        <i class="grcicon-help-black" rel="tooltip" title="Enter text of section or clause"></i>
      </label>
      <div class="wysiwyg-area">
        <textarea id="section-description" class="span12 double wysihtml5" name="description" placeholder="Enter text of {{#if_equals instance.directive.type 'Contract'}}clause{{else}}section{{/if_equals}}">{{{description}}}</textarea>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="javascript://">
          <span class="out">
            <i class="grcicon-show"></i>
            Show 
          </span>
          <span class="in">
            <i class="grcicon-hide"></i>
            Hide
          </span>
          Advanced
          <span class="hidden-fields out">
            Code
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area" style="display:none">
    <div class="row-fluid">
      <div class="span3">
        <label>
          Code
          <i class="grcicon-help-black" rel="tooltip" title="Enter Code"></i>
        </label>
        <input id="section-code" class="input-block-level" name="slug" placeholder="{{#if_equals instance.directive.type 'Contract'}}CLAUSE{{else}}SECTION{{/if_equals}}-XXX" type="text" value="{{slug}}">
      </div>
    </div>
  </div>
</form>
{{/instance}}
{{!/div}}
