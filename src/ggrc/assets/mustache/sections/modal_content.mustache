{{!div class="modal-body"}}

{{#instance}}
<form action="javascript://">
  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Enter Title"></i>
      </label>
      <input tabindex="1" id="section-title" class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}" autofocus>
    </div>
    <div class="span6">
      &nbsp;
      <input id="directive.id" name="directive" type="hidden" model="Directive" value="{{instance.directive.id}}">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <label>
        Text of {{#if_equals instance.directive.type 'Contract'}}Clause{{else}}Section{{/if_equals}}
        <i class="grcicon-help-black" rel="tooltip" title="Enter text of section or clause"></i>
      </label>
      <div class="wysiwyg-area">
        <textarea tabindex="2" id="section-description" class="span12 double wysihtml5" name="description" placeholder="Enter text of {{#if_equals instance.directive.type 'Contract'}}clause{{else}}section{{/if_equals}}">{{{description}}}</textarea>
      </div>
    </div>
    <div class="span6">
      {{#using owner=instance.owners.0 model_singular=model.model_singular}}
      <label>
        Owner
        <i class="grcicon-help-black" rel="tooltip" title="This is the person in charge of this {{model_singular}}."></i>
      </label>
      <input tabindex="3" class="input-block-level" name="owners.0.email" data-lookup="Person" data-list="true" placeholder="Enter email address" type="text"
        {{#if new_object_form}}
           value="{{current_user.email}}"
        {{else}}
           value="{{firstexist owner.email ''}}" 
        {{/if}}
      />
      {{/using}}
      {{#using contact=instance.contact}}
      <label>
        Contact
        <i class="grcicon-help-black" rel="tooltip" title="Point of contact for this object"></i>
      </label>
      <input tabindex="4" class="input-block-level" name="contact.email" data-lookup="Person" placeholder="Enter email address" type="text" value="{{firstexist contact.email ''}}" />
      {{/using}}
    </div>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <label>
        Notes
        <i class="grcicon-help-black" rel="tooltip" title="Append simple text or html notes here."></i>
      </label>
      <div class="wysiwyg-area">
        <textarea tabindex="5" id="notes" class="span12 double wysihtml5" name="notes" placeholder="Enter Notes">{{{notes}}}</textarea>
      </div>
    </div>
    <div class="span6">
      <label>
        Reference URL
        <i class="grcicon-help-black" rel="tooltip" title="Web links to other references."></i>
      </label>
      <input tabindex="6" id="reference_url" class="input-block-level" placeholder="https://www.example.com/" name="reference_url" type="text" value="{{reference_url}}">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="javascript://">
          <span class="out">
            <i class="grcicon-show-arrow"></i>
            Show 
          </span>
          <span class="in">
            <i class="grcicon-hide-arrow"></i>
            Hide
          </span>
          Advanced
          <span class="hidden-fields out">
            Code
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area" style="display:none">
    <div class="row-fluid">
      <div class="span3">
        <label>
          Code
          <i class="grcicon-help-black" rel="tooltip" title="The gGRC application will automatically provide codes for new objects.  If you would like to override this feature you may manually enter a code of your choosing.  You should have a specific reason for doing this."></i>
        </label>
        <input tabindex="7" id="section-code" class="input-block-level" name="slug" placeholder="{{#if_equals instance.directive.type 'Contract'}}CLAUSE{{else}}SECTION{{/if_equals}}-XXX" type="text" value="{{slug}}">
      </div>
    </div>
  </div>
</form>
{{/instance}}
{{!/div}}
