{{!div class="modal-body"}}
{{#instance}}
<form action="javascript://">
  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Give new {{model.model_plural}} a name that's easy to search for and indicates the main goals of this {{model.model_singular}}."></i>
      </label>
      <input tabindex="1" class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}" autofocus>
    </div>
    {{#with_page_object_as "page_object"}}
      <div class="span6">
        <label>
          Directive
          <i class="grcicon-help-black" rel="tooltip" title="Contract, Policy or Regulation Code"></i>
        </label>
        <input tabindex="2" id="directive.id" name="directive" type="hidden" model="Directive" null-if-empty="true" value="{{firstnonempty instance.directive.id ''}}">
        <p class="modal-value">
          {{#if instance.directive}}
            {{#using directive=instance.directive}}
            {{directive.title}}
            {{/using}}
          {{else}}
            <i>No directive</i>
          {{/if}}
        </p>
      </div>
    {{/with_page_object_as}}
  </div>
  <div class="row-fluid">
    <div class="span6">
      <label>
        Description
        <i class="grcicon-help-black" rel="tooltip" title="Provide more details on the purpose of this {{model.model_singular}} and provide context for how and when this {{model.model_singular}} might be used."></i>
      </label>
      <div class="wysiwyg-area">
        <textarea tabindex="3" id="control_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description">{{{description}}}</textarea>
      </div>
    </div>
    <div class="span6">
      {{#using contact=instance.contact}}
      <label>
        Contact
        <i class="grcicon-help-black" rel="tooltip" title="This is the person in charge of this {{model.model_singular}}."></i>
      </label>
      <input tabindex="4" class="input-block-level" name="contact.email" data-lookup="Person" placeholder="Enter email address" type="text" value="{{firstexist contact.email ''}}" />
      {{/using}}
      <label>
        Control URL
        <i class="grcicon-help-black" rel="tooltip" title="Web link to the Sites page / {{model.model_singular}} documentation."></i>
      </label>
      <input tabindex="5" class="input-block-level" name="url" placeholder="http://www.domain.com/" type="text" value="{{url}}">
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="javascript://">
          <span class="out">
            <i class="grcicon-show"></i>
            Show 
          </span>
          <span class="in">
            <i class="grcicon-hide"></i>
            Hide
          </span>
          Advanced
          <span class="hidden-fields out">
            Code, Company Control, Kind, Fraud-Related, Significance, Means, Assertions, Categories
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area" style="display:none">
    <div class="row-fluid">
      <div class="span6">
        <label>
          Code
          <i class="grcicon-help-black" rel="tooltip" title="The gGRC application will automatically provide codes for new objects.  If you would like to override this feature you may manually enter a code of your choosing.  You should have a specific reason for doing this."></i>
        </label>
        <input tabindex="6" class="input-block-level" name="slug" placeholder="CONTROL-XXX" type="text" value="{{slug}}">
      </div>
      <div class="span6">
        <label>
            Company Control
            <i class="grcicon-help-black" rel="tooltip" title="Is this a company control?"></i>
        </label>
        <label><input tabindex="7" type="checkbox" name="company_control" {{#if company_control}}checked="checked"{{/if}}/> Is this a company control?</label>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <label>
          Kind
          <i class="grcicon-help-black" rel="tooltip" title="Choose from the options in the drop down list, or leave this set to None."></i>
        </label>
        {{{option_select this "kind" "control_kind" tabindex=8}}}
      </div>
      <div class="span3">
        <label>
          Fraud Related
          <i class="grcicon-help-black" rel="tooltip" title="Is control fraud related?"></i>
        </label>
        <select class="input-block-level" name="fraud_related" null-if-empty="null-if-empty" tabindex="9">
          <option value="" {{#if_equals fraud_related ""}}selected{{/if_equals}}>Choose</option>
          <option value="0" {{#if_equals fraud_related "0"}}selected{{/if_equals}}>No</option>
          <option value="1" {{#if_equals fraud_related "1"}}selected{{/if_equals}}>Yes</option>
        </select>
      </div>
      <div class="span3">
        <label>
          Significance
          <i class="grcicon-help-black" rel="tooltip" title="Is this Control a Key Control?"></i>
        </label>
        <select class="input-block-level" name="key_control" null-if-empty="null-if-empty" tabindex="10">
          <option value="" {{#if_equals key_control ""}}selected{{/if_equals}}>Choose</option>
          <option value="0" {{#if_equals key_control "0"}}selected{{/if_equals}}>No</option>
          <option value="1" {{#if_equals key_control "1"}}selected{{/if_equals}}>Yes</option>
        </select>
      </div>
      <div class="span3">
        <label>
          Means
          <i class="grcicon-help-black" rel="tooltip" title="Choose from the options in the drop down list, or leave this set to None."></i>
        </label>
        {{{option_select this "means" "control_means" tabindex=11}}}
      </div>
    </div>
    <!--div class="row-fluid">
      <div class="span6">
        <label>
          Assertions
          <i class="grcicon-help-black" rel="tooltip" title="Choose Control Assertions"></i>
        </label>
        {{!{category_select this "assertions" 102}}
      </div>
      <div class="span6">
        <label>
          Categories
          <i class="grcicon-help-black" rel="tooltip" title="Choose Control Categories"></i>
        </label>
        {{!{category_select this "categories" 100}}
      </div>
    </div-->
    <div class="row-fluid">
      <div class="span12">
        <label>
          Notes
          <i class="grcicon-help-black" rel="tooltip" title="Append simple text or html notes here."></i>
        </label>
        <div class="wysiwyg-area">
          <textarea tabindex="14" id="control_notes" class="span12 double wysihtml5" name="notes" placeholder="Enter Notes">{{{notes}}}</textarea>
        </div>
      </div>
    </div>
  </div>
</form>
{{/instance}}
{{!/div}}
