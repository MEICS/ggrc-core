{{!div class="modal-body"}}
{{#instance}}
<form action="javascript://">
  <div class="row-fluid">
    <div class="span6">
      <label>
        Title
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Give new {{model.model_plural}} a name that's easy to search for and indicates the main goals of this {{model.model_singular}}."></i>
      </label>
      <input tabindex="1" class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}" autofocus>
    </div>
    {{#with_page_object_as "page_object"}}
      <div class="span6">
        <label>
          Directive
          <i class="grcicon-help-black" rel="tooltip" title="Contract, Policy or Regulation Code"></i>
        </label>
        <input tabindex="2" id="directive.id" name="directive" type="hidden" model="Directive" null-if-empty="true" value="{{firstnonempty instance.directive.id ''}}">
        <p class="modal-value">
          {{#if instance.directive}}
            {{#using directive=instance.directive}}
            {{directive.title}}
            {{/using}}
          {{else}}
            <i>No directive</i>
          {{/if}}
        </p>
      </div>
    {{/with_page_object_as}}
  </div>
  <div class="row-fluid">
    <div class="span6">
      <label>
        Description
        <i class="grcicon-help-black" rel="tooltip" title="Provide more details on the purpose of this {{model.model_singular}} and provide context for how and when this {{model.model_singular}} might be used."></i>
      </label>
      <div class="wysiwyg-area">
        <textarea tabindex="3" id="control_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description">{{{description}}}</textarea>
      </div>
    </div>
    <div class="span6">
      {{#using contact=instance.contact}}
      <label>
        Contact
        <i class="grcicon-help-black" rel="tooltip" title="This is the person in charge of this {{model.model_singular}}."></i>
      </label>
      <input tabindex="4" class="input-block-level" name="contact.email" data-lookup="Person" placeholder="Enter email address" type="text" value="{{firstexist contact.email ''}}" />
      {{/using}}
      <label>
        Control URL
        <i class="grcicon-help-black" rel="tooltip" title="Web link to the Sites page / {{model.model_singular}} documentation."></i>
      </label>
      <input tabindex="5" class="input-block-level" name="url" placeholder="http://www.domain.com/" type="text" value="{{url}}">
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <div class="expand-link">
        <a class="show-hidden-fields" href="javascript://">
          <span class="out">
            <i class="grcicon-show"></i>
            Show 
          </span>
          <span class="in">
            <i class="grcicon-hide"></i>
            Hide
          </span>
          Advanced
          <span class="hidden-fields out">
            Code, Company Control, Kind/Nature, Fraud-Related, Significance, Type/Means, Notes, Effective Date, Stop Date, Frequency, Assertions, Categories, Principal Assessor, Secondary Assessor
          </span>
        </a>
      </div>
    </div>
  </div>
  <div class="hidden-fields-area" style="display:none">
    <div class="row-fluid">
      <div class="span6">
        <label>
          Code
          <i class="grcicon-help-black" rel="tooltip" title="The gGRC application will automatically provide codes for new objects.  If you would like to override this feature you may manually enter a code of your choosing.  You should have a specific reason for doing this."></i>
        </label>
        <input tabindex="6" class="input-block-level" name="slug" placeholder="CONTROL-XXX" type="text" value="{{slug}}">
      </div>
      <div class="span6">
        <label>
            Company Control
            <i class="grcicon-help-black" rel="tooltip" title="Is this a company control?"></i>
        </label>
        <label><input tabindex="7" type="checkbox" name="company_control" {{#if company_control}}checked="checked"{{/if}}/> Is this a company control?</label>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <label>
          Kind/Nature
          <i class="grcicon-help-black" rel="tooltip" title="Choose from the options in the drop down list, or leave this set to None."></i>
        </label>
        {{{option_select this "kind" "control_kind" tabindex=8}}}
      </div>
      <div class="span3">
        <label>
          Fraud Related
          <i class="grcicon-help-black" rel="tooltip" title="Is control fraud related?"></i>
        </label>
        <select class="input-block-level" name="fraud_related" null-if-empty="null-if-empty" tabindex="9">
          <option value="" {{#if_equals fraud_related ""}}selected{{/if_equals}}>---</option>
          <option value="0" {{#if_equals fraud_related "0"}}selected{{/if_equals}}>No</option>
          <option value="1" {{#if_equals fraud_related "1"}}selected{{/if_equals}}>Yes</option>
        </select>
      </div>
      <div class="span3">
        <label>
          Significance
          <i class="grcicon-help-black" rel="tooltip" title="Is this Control a Key Control?"></i>
        </label>
        <select class="input-block-level" name="key_control" null-if-empty="null-if-empty" tabindex="10">
          <option value="" {{#if_equals key_control ""}}selected{{/if_equals}}>---</option>
          <option value="0" {{#if_equals key_control "0"}}selected{{/if_equals}}>Key</option>
          <option value="1" {{#if_equals key_control "1"}}selected{{/if_equals}}>Non-Key</option>
        </select>
      </div>
      <div class="span3">
        <label>
          Type/Means
          <i class="grcicon-help-black" rel="tooltip" title="Choose from the options in the drop down list, or leave this set to None."></i>
        </label>
        {{{option_select this "means" "control_means" tabindex=11}}}
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <label>
          Notes
          <i class="grcicon-help-black" rel="tooltip" title="Append simple text or html notes here."></i>
        </label>
        <div class="wysiwyg-area">
          <textarea tabindex="12" id="control_notes" class="span12 double wysihtml5" name="notes" placeholder="Enter Notes">{{{notes}}}</textarea>
        </div>
      </div>
      <div class="span6">
        <label>
          Effective Date
          <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
        </label>
        <input tabindex="13" class="input-block-level date" name="start_date" data-toggle="datepicker" data-before="end_date" placeholder="MM/DD/YYYY" type="text" value="{{localize_date start_date}}">
        
        <label>
          Stop Date
          <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
        </label>
        <input tabindex="14" class="input-block-level date" name="end_date" data-toggle="datepicker" data-after="start_date" placeholder="MM/DD/YYYY" type="text" value="{{localize_date end_date}}">
      </div>
    </div>
    <div class="row-fluid">
      <div class="span4">
        <label>
          Frequency
          <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
        </label>
        <select class="input-block-level" name="frequency" null-if-empty="null-if-empty" tabindex="15">
          <option value="" {{#if_equals frequency ""}}selected{{/if_equals}}>---</option>
          <option value="0" {{#if_equals frequency "0"}}selected{{/if_equals}}>Daily</option>
          <option value="1" {{#if_equals frequency "1"}}selected{{/if_equals}}>Bi-Weekly</option>
          <option value="2" {{#if_equals frequency "2"}}selected{{/if_equals}}>Weekly</option>
          <option value="3" {{#if_equals frequency "3"}}selected{{/if_equals}}>Bi-Monthly</option>
          <option value="4" {{#if_equals frequency "4"}}selected{{/if_equals}}>Monthly</option>
          <option value="5" {{#if_equals frequency "5"}}selected{{/if_equals}}>Quarterly</option>
          <option value="6" {{#if_equals frequency "6"}}selected{{/if_equals}}>Semi-Annually</option>
          <option value="7" {{#if_equals frequency "7"}}selected{{/if_equals}}>Yearly</option>
          <option value="8" {{#if_equals frequency "8"}}selected{{/if_equals}}>Indeterminate</option>
          <option value="9" {{#if_equals frequency "9"}}selected{{/if_equals}}>Transactional</option>
          <option value="10" {{#if_equals frequency "10"}}selected{{/if_equals}}>Continuous</option>
        </select>
      </div>
      <div class="span4">
        <label>
          Assertions
          <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
        </label>
        <select multiple="multiple" class="input-block-level" name="assertions" null-if-empty="null-if-empty" tabindex="16">
          <option value="0" {{#if_equals assertions "0"}}selected{{/if_equals}}>Confidentiality</option>
          <option value="1" {{#if_equals assertions "1"}}selected{{/if_equals}}>Integrity</option>
          <option value="2" {{#if_equals assertions "2"}}selected{{/if_equals}}>Availability</option>
          <option value="3" {{#if_equals assertions "3"}}selected{{/if_equals}}>Security</option>
          <option value="4" {{#if_equals assertions "4"}}selected{{/if_equals}}>Privacy</option>
        </select>
      </div>
      <div class="span4">
        <label>
          Categories
          <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
        </label>
        <select multiple="multiple" class="input-block-level" name="categories" null-if-empty="null-if-empty" tabindex="17" disabled>
          <option value="1" {{#if_equals categories "1"}}selected{{/if_equals}}>Access Control</option>
          <option value="2" {{#if_equals categories "2"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;Access Management</option>
          <option value="3" {{#if_equals categories "3"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;Authorization</option>
          <option value="4" {{#if_equals categories "4"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;Authentication</option>
          <option value="11" {{#if_equals categories "11"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;Governance</option>
          <option value="12" {{#if_equals categories "12"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Training</option>
          <option value="13" {{#if_equals categories "13"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Policies &amp; Procedures</option>
          <option value="14" {{#if_equals categories "14"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Monitoring</option>
          <option value="5" {{#if_equals categories "5"}}selected{{/if_equals}}>Change Management</option>
          <option value="6" {{#if_equals categories "6"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;Segregation of Duties</option>
          <option value="7" {{#if_equals categories "7"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;Configuration Management</option>
          <option value="15" {{#if_equals categories "15"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;Ken's Kategory</option>
          <option value="8" {{#if_equals categories "8"}}selected{{/if_equals}}>Business Continuity</option>
          <option value="9" {{#if_equals categories "9"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;Disaster Recovery</option>
          <option value="10" {{#if_equals categories "10"}}selected{{/if_equals}}>&nbsp;&nbsp;&nbsp;Physical Security</option>
          <option value="16" {{#if_equals categories "16"}}selected{{/if_equals}}>Core</option>
          <option value="26" {{#if_equals categories "26"}}selected{{/if_equals}}>Availability</option>
          <option value="27" {{#if_equals categories "27"}}selected{{/if_equals}}>Integrity</option>
          <option value="28" {{#if_equals categories "28"}}selected{{/if_equals}}>Confidentiality</option>
        </select>
      </div>
    </div>
    
    <div class="row-fluid">
      <div class="span6">
        <label>
          Principal Assessor
          <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
        </label>
        <i class="grcicon-person-green pull-left icon-field"></i>
        <div class="objective-selector">
          {{#using contact=instance.contact}}
          <input tabindex="18" type="text" name="contact.email" data-lookup="Person" class="span11 audit-selector" value="{{firstnonempty contact.email ''}}">
          {{/using}}
        </div>
      </div>
      <div class="span6">
        <label>
          Secondary Assessor
          <i class="grcicon-help-black" rel="tooltip" title="Description goes here"></i>
        </label>
        <i class="grcicon-person-green pull-left icon-field"></i>
        <div class="objective-selector">
          {{#using contact=instance.contact}}
          <input tabindex="19" type="text" name="contact.email" data-lookup="Person" class="span11 audit-selector" value="{{firstnonempty contact.email ''}}">
          {{/using}}
        </div>
      </div>
    </div>
    
  </div>
</form>
{{/instance}}
{{!/div}}
