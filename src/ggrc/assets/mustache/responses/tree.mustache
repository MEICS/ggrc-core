  <li class="tree-item programs responses-list" data-object-id="{{instance.id}}" data-object-type="{{instance.constructor.table_singular}}">
    <div class="item-main" data-model="true" {{#instance}}{{data 'model'}}{{/instance}}>
      <a href="javascript://" class="openclose">
        <div class="row-fluid">
          <div class="span6">
            <div class="item-data">
              <div class="tree-title-area">
                {{{firstnonempty instance.description 'Response'}}}
              </div>
            </div>
          </div>
          
          <div class="span3" {{ (el) -> el.ggrc_controllers_quick_form({ instance : el.closest('[data-model]').data('model')}); }}>
            <i class="grcicon-person-green pull-left"></i>
            <div class="objective-selector">
              {{#using contact=instance.contact}}
                <input type="text" name="contact.name" data-lookup="Person" class="span8 short-field" value="{{firstnonempty instance.contact.name instance.contact.email ''}}" {{^is_allowed 'update' instance context=instance.context.id}}disabled readonly{{/is_allowed}}>
              {{/using}}
            </div>
          </div>
          
          <div class="span3" {{ (el) -> el.ggrc_controllers_quick_form({ instance : el.closest('[data-model]').data('model')}); }}>
            <select name="status" class="span10 short-field" {{^is_allowed 'update' instance context=instance.context.id}}disabled readonly{{/is_allowed}}>
              {{#iterate 'Assigned' 'Accepted' 'Completed'}}
              <option {{#if_equals iterator instance.status}}selected="true"{{/if_equals}}>{{iterator}}</option>
              {{/iterate}}
            </select>
          </div>
        </div>
      </a>
    </div>
    
    <div class="tier-2-info item-content">
        {{! The parent is Audit on My Work/Profile pages }}
        {{#if_equals parent_instance.constructor.shortName "Audit"}}
        {{#using request=instance.request}}
          <div class="tier-2-info-content">
            <div class="response-connect">
              As response to: <span>{{#using objective=request.objective}}{{objective.title}}{{/using}}</span>
            </div>
            <div class="show-description">
              <div class="row-fluid">
                <div class="span12">
                  {{{firstnonempty request.description '<i>No description</i>'}}}
                </div>
              </div>
            </div>
            
            <div class="row-fluid">
            {{#if request.requested_on}}
              {{#using requested_on=request.requested_on}}
              <div class="span6"><p><strong>requested on: </strong>{{localize_date requested_on}}</p></div>
              {{/using}}
            {{/if}}
            {{#if request.assignee}}
              {{#using assignee=request.assignee}}
              <div class="span6"><p><strong>requested by: </strong>{{firstnonempty assignee.name assignee.email}}</p></div>
              {{/using}}
            {{/if}}
            </div>
          </div>
        {{/using}}
        {{/if_equals}}
        
        {{#is_allowed 'update' instance context=instance.context.id}}
          <div class="tier-2-info-content">
            <div class="row-fluid">
              <div class="span12">
                <a class="utility-link" href="javascript://" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide" data-object-singular="Response" data-object-plural="responses" data-object-id="{{instance.id}}">
                  <i class="grcicon-edit"></i>
                  Edit PBC Response
                </a>
              </div>
            </div>
          </div>
        {{/is_allowed}}
      
      {{#child_options.0}}
      <div class="inner-tree">
        <h6>Mapped Objects ({{child_options.0.list.length}})</h6>
        <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data('options')) }}>
        </ul>
      </div>
      {{/child_options.0}}
      
      {{#if_equals instance.response_type 'documentation'}}
      {{#child_options.1}}
      <div class="inner-tree">
        <h6>Evidence ({{child_options.1.list.length}})</h6>
        <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data('options')) }}>
        </ul>
      </div>
      {{/child_options.1}}
      {{/if_equals}}
      {{#if_equals instance.response_type 'interview'}}
      {{#child_options.2}}
      <div class="inner-tree">
        <h6>Meetings ({{child_options.2.list.length}})</h6>
        <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data('options')) }}></ul>
      </div>
      {{/child_options.2}}
      {{#child_options.3}}
      <div class="inner-tree">
        <h6>Participants ({{child_options.3.list.length}})</h6>
        <ul class="tree-structure new-tree" {{data 'options'}} {{ (el) -> el.cms_controllers_tree_view(el.data('options')) }}></ul>
      </div>
      {{/child_options.3}}
      {{/if_equals}}
      {{#if_equals instance.response_type 'population sample'}}
      <div class="tier-2-info-content population-content" {{#instance}}{{data 'model'}}{{/instance}} {{ (el) -> el.ggrc_controllers_quick_form({ instance : el.data('model')}); }}>
        <ul class="population-upload">
          <li>
            <div class="row-fluid">
              <div class="span8">
                <label>Population worksheet</label>
                <div class="row-fluid">
                  {{#using population_worksheet=instance.population_worksheet}}
                  <div class="span9">
                    <input type="text" name="population_worksheet.name" data-lookup="Document" class="input-block-level" placeholder="Enter URL" value="{{firstnonempty population_worksheet.name population_worksheet.link ''}}">
                  </div>
                  {{/using}}
                  <!--
                    <div class="span1">
                      <span class="choose">OR</span>
                    </div>
                    <div class="span2">
                      <a href="javascript://" data-toggle="modal-ajax-form" data-modal-reset="reset" class="btn btn-add" data-modal-class="modal-wide" data-object-singular="Request" data-object-plural="requests" data-object-params='{ "{{instance.constructor.table_singular}}": {"id" : {{instance.id}}, "type" : "{{instance.constructor.model_singular}}" } }'><i class="grcicon-upload"></i> Upload</a>
                    </div>
                  -->
                </div>
              </div>
              <div class="span4">
                <label>Population #</label>
                <input type="text" name="population_count" class="input-block-level" placeholder="example: 1000" value="{{firstnonempty instance.population_count ''}}">
              </div>
            </div>
          </li>
          <li>
            <div class="row-fluid">
              <div class="span8">
                <label>Sample worksheet</label>
                <div class="row-fluid">
                  {{#using sample_worksheet=instance.sample_worksheet}}
                  <div class="span9">
                    <input type="text" name="sample_worksheet.name" data-lookup="Document" class="input-block-level" placeholder="Enter URL" value="{{firstnonempty sample_worksheet.name sample_worksheet.link ''}}">
                  </div>
                  {{/using}}
                  <!--
                    <div class="span1">
                      <span class="choose">OR</span>
                    </div>
                    <div class="span2">
                      <a href="#" class="btn btn-add"><i class="grcicon-upload"></i> Upload</a>
                    </div>
                  -->
                </div>
              </div>
              <div class="span4">
                <label>Sample #</label>
                <input type="text" name="sample_count" class="input-block-level" placeholder="example: 1000" value="{{firstnonempty instance.sample_count ''}}">
              </div>
            </div>
          </li>
          <li>
            <div class="row-fluid">
              <div class="span8">
                <label>Sample evidence</label>
                <div class="row-fluid">
                  {{#using sample_evidence=instance.sample_evidence}}
                  <div class="span9">
                    <input type="text" name="sample_evidence.name" data-lookup="Document" class="input-block-level" placeholder="Enter URL" value="{{firstnonempty sample_evidence.name sample_evidence.link ''}}">
                  </div>
                  {{/using}}
                  <!--
                    <div class="span1">
                      <span class="choose">OR</span>
                    </div>
                    <div class="span2">
                      <span class="btn btn-add"><i class="grcicon-upload"></i> Upload</span>
                    </div>
                  -->
                </div>
              </div>
              <div class="span4">&nbsp;</div>
            </div>
          </li>
        </ul>
      </div>
      {{/if_equals}}
      
    </div>
  </li>
