{{!div class="modal-body"}}
{{#instance}}
<form action="javascript://">
  {{{ handle_context }}}
  <div class="row-fluid">
    <div class="span6">
      <label>
        PBC Response
        <span class="required">*</span>
      </label>
      <div class="wysiwyg-area">
        <textarea tabindex="1" id="response_description" class="span12 double wysihtml5" name="description" placeholder="Response Description" autofocus>{{{description}}}</textarea>
      </div>
    </div>
    
    <div class="span6">
      <div class="row-fluid">
        <div class="span6">&nbsp;</div>
        <div class="span6">
          <label>
            Status
          </label>
          <select class="input-block-level" name="status" {{#new_object_form}}disabled="true"{{/new_object_form}} tabindex="2">
            {{#iterate 'Assigned' 'Accepted' 'Completed'}}
            <option {{#if_equals iterator instance.status}}selected="true"{{/if_equals}}>{{iterator}}</option>
            {{/iterate}}
          </select>
        </div>
      </div>
      
      <div class="row-fluid">
        {{#using contact=instance.contact}}
        {{#with_current_user_as 'current_user'}}
        <div class="span12">
          <label>
            Assignee
            <span class="required">*</span>
          </label>
          <i class="grcicon-person-green pull-left icon-field"></i>
          <div class="objective-selector">
            <input tabindex="3" type="text" name="contact.email" class="input-wide" data-lookup="Person" value="{{firstnonempty contact.email current_user.email ''}}">
            <input type="hidden" name="contact.id" value="{{firstnonempty contact.id current_user.id ''}}">
          </div>
        </div>
        {{/with_current_user_as}}
        {{/using}}
      </div>
      
    </div>
  </div>
  
  {{#using request=instance.request}}
  <input type="hidden" name="request.id" value="{{request.id}}">
  <input type="hidden" name="response_type" value="{{request.request_type}}">
  {{/using}}
</form>
{{/instance}}
{{!/div}}
