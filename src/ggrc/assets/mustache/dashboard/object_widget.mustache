{{!section class="widget... }}
  <header class="header">
    <div class="row-fluid">
      <div class="span9">
        <h2>
          <i class="{{widget_icon}}"></i>
          {{{widget_name}}}
          <span class="object_count">
            {{#widget_count}}{{#count}}({{count}}{{#is_profile}}{{#is_allowed 'view_object_page' '__GGRC_ALL__' context=''}}{{#global_count model.model_singular}}/{{.}}{{/global_count}}{{/is_allowed}}{{/is_profile}}){{/count}}{{/widget_count}}</span>
          <span class="explanation">{{widget_info}}</span>
        </h2>
      </div>
      <div class="span3">
        {{#if 0}}
        <div class="widget-action pull-right remove-widget" rel="tooltip" title="Remove">
          <a class="remove" href="javascript://">
            <i class="grcicon-x-grey"></i>
          </a>
        </div>
        {{/if}}
        <div class="widget-action pull-right widget-action-help">
          <a data-placement="top" data-toggle="modal-ajax" data-modal-type="helpform" data-help-slug="{{firstnonempty widget_help widget_id modal.table_plural}}" href="javascript://" rel="tooltip" data-original-title="Help">
            <i class="grcicon-help-black"></i>
          </a>
        </div>
        {{#if extra_widget_actions_view}}
        {{{renderLive extra_widget_actions_view}}}
        {{/if}}
      </div>
    </div>
  </header>
  {{#if show_filter}}
  <div class="filter">
    <div class="row-fluid">
      <div class="span8">
        <input class="ui-corner-all widgetsearch clear-value" type="text" placeholder="Search" />
      </div>
      <div class="span4">
        <a class="btn btn-add pull-right" href="/{{object_route}}/new" data-toggle="modal-ajax-form" data-modal-reset="reset" data-modal-class="modal-wide">
          <i class="grcicon-add"></i>
          <span class="object-type">{{model.shortName}}</span>
        </a>
      </div>    
    </div>
  </div>
  {{/if}}
  <section class="content">
    {{{widget_initial_content}}}
  </section>
{{!/section}}
