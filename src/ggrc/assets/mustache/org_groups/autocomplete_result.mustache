{{#items}}
<li {{data 'ui-autocomplete-item'}} class="ui-menu-item">
  <a href="javascript://">
    {{title}}
  </a>
  <div class="extended-content">
    <div class="row-fluid">
      <div class="span12">
        {{title}}
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        {{{description}}}
      </div>
    </div>
  </div>
</li>
{{/items}}
{{^items}}
  {{#is_allowed "create" "OrgGroup" context=null}}
  <li data-ui-autocomplete-item="">
    No results
  </li>
  {{else}}
  <li class="ui-menu-item" data-ui-autocomplete-item="">
    No results
  </li>
  {{/is_allowed}}
{{/items}}
{{#is_allowed "create" "OrgGroup" context=null}}
<li class="ui-menu-item add-new" data-ui-autocomplete-item="">
  <a data-object-plural="org_groups" data-modal-class="modal-wide" href="javascript://" data-object-singular="OrgGroup" data-toggle="modal-ajax-form" data-modal-reset="reset" >
    + Create New
  </a>
</li>
{{/is_allowed}}
